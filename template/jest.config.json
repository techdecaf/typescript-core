{
  "roots": ["src"],
  "testEnvironment": "node",
  "setupFiles": ["./jest.setup.ts"],
  "reporters": ["default", "jest-junit"],
  "coverageReporters": ["text"],
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/_*.{ts,tsx}",
    "!**/*.test.{ts,tsx}",
    "!src/{app.module,lambda}.ts",
    "!src/**/*.{migration,entity}.ts"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "watchPlugins": [],
  "bail": true
}
